<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
    tools:context=".DonorsChoice"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/constraint"
    android:background="#FAF8EC"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:background="#FAF8EC">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FAF8EC"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="Please select the recipient you would like to donate to from the list of recipients below:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/recipId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:ems="10"
                android:hint="Recipient Id"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/numItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:ems="10"
                android:hint="Quantity"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="361dp"
                android:layout_height="45dp"
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/submitDonation"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:background="@color/colorAccent"
                android:text="Make the Donation" />


            <Button
                android:id="@+id/next"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:background="@color/colorAccent"
                android:text="Next" />


            <TextView
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="8sp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
