<ScrollView
    tools:context=".AboutUs"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/constraint"
    android:background="#FAF8EC"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:background="#FAF8EC">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#FAF8EC"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="422dp"
                android:layout_height="129dp"
                app:srcCompat="@drawable/lend_a__hand" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25sp"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="About Us"
                android:textColor="#9C27B0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                android:text="Halo was created to bring those who are in need of basic items to those who are in excess of the items needed. Our application allows any donor to choose a recipient (or multiple recipients) that they would like to donate to based on the recipientâ€™s motivation. " />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:gravity="center"
                android:text="We are so pleased to have produced this application that is able to bring together our community in such a stressful and unpredictable time, due to the current COVID-19 pandemic. This service aims to help those in need as well as give those who are able to help others a practical way to do their bit for the community. We hope that by providing for those in need, we will see more people paying forward good deeds to others who are in the same position. " />

            <Button
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="back"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>