<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
    tools:context=".RecipientProcess"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#FAF8EC"
    android:id="@+id/constraint"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="#FAF8EC">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FAF8EC"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Place Your Request Here:"
                android:textColor="#9C27B0"
                android:textSize="26sp" />


            <EditText
                android:id="@+id/ItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ITEM NAME:"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/NumItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="NUMBER OF ITEMS:"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/ItemDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ITEM DESCRIPTION:"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/PhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="PREFERRED CONTACT NUMBER:"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/motivation"
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_marginBottom="10sp"
                android:autoSizeTextType="uniform"
                android:ems="10"
                android:gravity="top"
                android:hint="MOTIVATION FOR THE ITEM REQUESTED:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="Please select a category from the drop down menu below:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />

            <Button
                android:id="@+id/confirmRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="Confirm Request" />

            <Button
                android:id="@+id/back"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Back" />

            <TextView
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:textColor="#E91E63"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>

</ScrollView>