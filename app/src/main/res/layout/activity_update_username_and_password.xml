<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="10sp"
    android:layout_marginTop="10sp"
    tools:context=".UpdateUsernameAndPassword">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/back"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="18sp"
            android:layout_marginTop="18sp"
            android:text="Back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="337dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Lets Update your Username and Password!"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:ems="10"
            android:hint="Please Type in your New Username:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:ems="10"
            android:hint="Please Type in your New Password:"
            android:inputType="textPassword" />


        <EditText
            android:id="@+id/confirm"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:ems="10"
            android:hint="Please Confirm your New Password:"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/checker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Confirm"
            android:background="@color/orange"/>

        <TextView
            android:id="@+id/display"
            android:layout_width="398dp"
            android:layout_height="83dp"
            android:layout_marginTop="15sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <Button
            android:id="@+id/next"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="18sp"
            android:text="Next" />

    </LinearLayout>
</RelativeLayout>