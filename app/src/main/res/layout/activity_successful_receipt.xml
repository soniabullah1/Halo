<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    tools:context=".SuccessfulReceipt"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/view"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF8EC"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:text="Your Request was Successful."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:text="A Donor will be in Contact with you."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/anotherRequest"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@color/blueOne"
            android:text="Make another request" />

        <Button
            android:id="@+id/home"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            android:background="@color/blueOne"
            android:text="BACK TO HOME PAGE" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="327dp"
            android:layout_height="224dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/lend_a__hand" />


    </LinearLayout>
</RelativeLayout>

