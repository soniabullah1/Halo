<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8EC"
    tools:context=".DonationProcess">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FAF8EC"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:text="Start Donating Here!"
            android:textColor="#9C27B0"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:text="Please ensure that the item name matches that of the recipient you wish to donate to. These details can be viewed under the Recipient List on the Home Page and are necessary to find the correct list of recipients."
            android:textColor="#673AB7"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/ItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ITEM NAME:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/NumItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="NUMBER OF ITEMS:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/itemDescrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:ems="10"
            android:hint="ITEM DESCRIPTION:"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Please select a category from the drop down menu below:"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15sp" />

        <Button
            android:id="@+id/confrimBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:text="Confirm Donation" />

        <Button
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Back" />

        <TextView
            android:id="@+id/display"
            android:layout_width="387dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textColor="#E91E63"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>